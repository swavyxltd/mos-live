// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String    @unique
  emailVerified DateTime?
  image         String?
  phone         String?
  isSuperAdmin  Boolean   @default(false)
  isArchived    Boolean   @default(false)
  archivedAt   DateTime?
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  accounts             Account[]
  sessions             Session[]
  memberships          UserOrgMembership[]
  classes              Class[]               @relation("ClassTeacher")
  students             Student[]             @relation("StudentPrimaryParent")
  progressLogs         ProgressLog[]
  supportTickets       SupportTicket[]
  supportTicketResponses SupportTicketResponse[]
  auditLogs            AuditLog[]
  parentBillingProfile ParentBillingProfile?
  reviewedApplications Application[]         @relation("ApplicationReviewer")
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model Org {
  id        String   @id @default(cuid())
  name      String
  slug      String   @unique
  timezone  String   @default("Europe/London")
  settings  String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  memberships           UserOrgMembership[]
  classes               Class[]
  students              Student[]
  studentClasses        StudentClass[]
  attendance            Attendance[]
  feesPlans             FeesPlan[]
  invoices              Invoice[]
  payments              Payment[]
  parentBillingProfiles ParentBillingProfile[]
  messages              Message[]
  progressLogs          ProgressLog[]
  holidays              Holiday[]
  terms                 Term[]
  exams                 Exam[]
  supportTickets        SupportTicket[]
  invitations           Invitation[]
  auditLogs             AuditLog[]
  platformBilling       PlatformOrgBilling?
  applications          Application[]
}

model UserOrgMembership {
  id     String @id @default(cuid())
  userId String
  orgId  String
  role   String

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
  org  Org  @relation(fields: [orgId], references: [id], onDelete: Cascade)

  @@unique([userId, orgId])
}

model Class {
  id          String   @id @default(cuid())
  orgId       String
  name        String
  description String?
  schedule    String
  teacherId   String?
  isArchived  Boolean  @default(false)
  archivedAt DateTime?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  org            Org            @relation(fields: [orgId], references: [id], onDelete: Cascade)
  teacher        User?          @relation("ClassTeacher", fields: [teacherId], references: [id])
  studentClasses StudentClass[]
  attendance     Attendance[]
  exams          Exam[]
}

model Student {
  id              String    @id @default(cuid())
  orgId           String
  firstName       String
  lastName        String
  dob             DateTime?
  allergies       String?
  medicalNotes    String?
  primaryParentId String?
  isArchived      Boolean   @default(false)
  archivedAt     DateTime?
  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt

  org            Org            @relation(fields: [orgId], references: [id], onDelete: Cascade)
  primaryParent  User?          @relation("StudentPrimaryParent", fields: [primaryParentId], references: [id])
  studentClasses StudentClass[]
  attendance     Attendance[]
  invoices       Invoice[]
  progressLogs   ProgressLog[]
}

model StudentClass {
  id        String @id @default(cuid())
  orgId     String
  studentId String
  classId   String

  org     Org     @relation(fields: [orgId], references: [id], onDelete: Cascade)
  student Student @relation(fields: [studentId], references: [id], onDelete: Cascade)
  class   Class   @relation(fields: [classId], references: [id], onDelete: Cascade)

  @@unique([studentId, classId])
}

model Attendance {
  id        String           @id @default(cuid())
  orgId     String
  classId   String
  studentId String
  date      DateTime
  status    String

  org     Org     @relation(fields: [orgId], references: [id], onDelete: Cascade)
  class   Class   @relation(fields: [classId], references: [id], onDelete: Cascade)
  student Student @relation(fields: [studentId], references: [id], onDelete: Cascade)

  @@unique([classId, studentId, date])
}

model FeesPlan {
  id        String   @id @default(cuid())
  orgId     String
  name      String
  amountP   Int
  cadence   String   @default("MONTHLY")
  isActive  Boolean  @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  org Org @relation(fields: [orgId], references: [id], onDelete: Cascade)
}

model Invoice {
  id         String         @id @default(cuid())
  orgId      String
  studentId  String
  amountP    Int
  dueDate    DateTime
  status     String         @default("DRAFT")
  paidAt     DateTime?
  paidMethod String?
  createdAt  DateTime       @default(now())
  updatedAt  DateTime       @updatedAt

  org      Org       @relation(fields: [orgId], references: [id], onDelete: Cascade)
  student  Student   @relation(fields: [studentId], references: [id], onDelete: Cascade)
  payments Payment[]
}

model Payment {
  id         String        @id @default(cuid())
  orgId      String
  invoiceId  String
  method     String
  amountP    Int
  status     String        @default("PENDING")
  providerId String?
  meta       String?
  createdAt  DateTime      @default(now())
  updatedAt  DateTime      @updatedAt

  org     Org     @relation(fields: [orgId], references: [id], onDelete: Cascade)
  invoice Invoice @relation(fields: [invoiceId], references: [id], onDelete: Cascade)
}

model ParentBillingProfile {
  id                     String   @id @default(cuid())
  orgId                  String
  parentUserId           String
  stripeCustomerId       String?
  defaultPaymentMethodId String?
  autoPayEnabled         Boolean  @default(false)
  createdAt              DateTime @default(now())
  updatedAt              DateTime @updatedAt

  org        Org  @relation(fields: [orgId], references: [id], onDelete: Cascade)
  parentUser User @relation(fields: [parentUserId], references: [id], onDelete: Cascade)

  @@unique([orgId, parentUserId])
  @@unique([parentUserId])
}

model Message {
  id        String          @id @default(cuid())
  orgId     String
  title     String
  body      String
  audience  String
  channel   String
  status    String          @default("DRAFT")
  targets   String?
  createdAt DateTime        @default(now())
  updatedAt DateTime        @updatedAt

  org Org @relation(fields: [orgId], references: [id], onDelete: Cascade)
}

model ProgressLog {
  id          String   @id @default(cuid())
  orgId       String
  studentId   String
  body        String
  createdById String
  createdAt   DateTime @default(now())

  org       Org     @relation(fields: [orgId], references: [id], onDelete: Cascade)
  student   Student @relation(fields: [studentId], references: [id], onDelete: Cascade)
  createdBy User    @relation(fields: [createdById], references: [id])
}

model Holiday {
  id        String   @id @default(cuid())
  orgId     String
  name      String
  startDate DateTime
  endDate   DateTime
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  org Org @relation(fields: [orgId], references: [id], onDelete: Cascade)
}

model Term {
  id        String   @id @default(cuid())
  orgId     String
  name      String
  startDate DateTime
  endDate   DateTime
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  org Org @relation(fields: [orgId], references: [id], onDelete: Cascade)
}

model Exam {
  id        String   @id @default(cuid())
  orgId     String
  title     String
  date      DateTime
  classId   String?
  notes     String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  org   Org    @relation(fields: [orgId], references: [id], onDelete: Cascade)
  class Class? @relation(fields: [classId], references: [id], onDelete: Cascade)
}

model SupportTicket {
  id          String              @id @default(cuid())
  orgId       String
  createdById String?
  role        String
  subject     String
  body        String
  status      String              @default("OPEN")
  createdAt   DateTime            @default(now())
  updatedAt   DateTime            @updatedAt

  org       Org   @relation(fields: [orgId], references: [id], onDelete: Cascade)
  createdBy User? @relation(fields: [createdById], references: [id])
  responses SupportTicketResponse[]
}

model SupportTicketResponse {
  id          String   @id @default(cuid())
  ticketId    String
  body        String
  createdById String
  createdAt   DateTime @default(now())

  ticket    SupportTicket @relation(fields: [ticketId], references: [id], onDelete: Cascade)
  createdBy User          @relation(fields: [createdById], references: [id])
}

model Invitation {
  id         String    @id @default(cuid())
  orgId      String
  email      String?
  phone      String?
  role       String
  token      String    @unique
  expiresAt  DateTime
  acceptedAt DateTime?
  createdAt  DateTime  @default(now())

  org Org @relation(fields: [orgId], references: [id], onDelete: Cascade)
}

model AuditLog {
  id          String   @id @default(cuid())
  orgId       String?
  actorUserId String?
  action      String
  targetType  String
  targetId    String?
  data        String?
  createdAt   DateTime @default(now())

  org  Org?  @relation(fields: [orgId], references: [id], onDelete: Cascade)
  user User? @relation(fields: [actorUserId], references: [id])
}

model PlatformOrgBilling {
  id                       String    @id @default(cuid())
  orgId                    String    @unique
  stripeCustomerId         String
  stripeSubscriptionItemId String
  lastUsageReportedAt      DateTime?
  createdAt                DateTime  @default(now())
  updatedAt                DateTime  @updatedAt

  org Org @relation(fields: [orgId], references: [id], onDelete: Cascade)
}

model Application {
  id                String            @id @default(cuid())
  orgId             String
  status            String             @default("NEW")
  guardianName      String
  guardianPhone     String
  guardianEmail     String
  guardianAddress   String?
  preferredClass    String?
  preferredTerm     String?
  preferredStartDate DateTime?
  additionalNotes   String?
  adminNotes        String?
  submittedAt       DateTime          @default(now())
  reviewedAt        DateTime?
  reviewedById      String?
  createdAt         DateTime          @default(now())
  updatedAt         DateTime          @updatedAt

  org         Org              @relation(fields: [orgId], references: [id], onDelete: Cascade)
  reviewedBy  User?            @relation("ApplicationReviewer", fields: [reviewedById], references: [id])
  children    ApplicationChild[]
}

model ApplicationChild {
  id            String      @id @default(cuid())
  applicationId String
  firstName     String
  lastName      String
  dob           DateTime?
  gender        String?
  createdAt     DateTime    @default(now())
  updatedAt     DateTime    @updatedAt

  application Application @relation(fields: [applicationId], references: [id], onDelete: Cascade)
}

